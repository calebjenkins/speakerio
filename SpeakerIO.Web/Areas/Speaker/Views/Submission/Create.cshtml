@using SpeakerIO.Web.Application.Extensions
@model SpeakerIO.Web.Areas.Speaker.Models.SubmissionViewModel
<h2>
    Submit a session for @Model.CallForSpeakers.EventName</h2>
<div class="row">
    <div class="span4">
        @using (Html.BeginForm())
        {
            @Html.EditorForModel()
            <button type="submit" class="btn btn-primary">Save</button>
        }
    </div>
    <div class="span6">
        <p>@Model.CallForSpeakers.Description</p>
        <p>Event dates: @Model.CallForSpeakers.FirstDayOfEvent.ToDate() - @Model.CallForSpeakers.LastDayOfEvent.ToDate()</p>
        <p>Deadline: @Model.CallForSpeakers.LastDayToSubmit.ToDate()</p>
    </div>
</div>
